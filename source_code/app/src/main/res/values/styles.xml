    <style name="BlueTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:editTextColor">@android:color/black</item>

        <item name="android:textAllCaps">false</item>

        <!-- Customize your theme here. <item name="android:windowTranslucentStatus">true</item>-->
        <item name="actionBarTheme">@style/BlueTheme.ActionBarTheme</item>

        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/headerBlue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:actionBarStyle">@style/MyActionBar</item>-->

        <item name="colorError">@color/dark_red</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="BlueTheme.ActionBarTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:editTextColor">@android:color/black</item>

    </style>


    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/black</item>

    </style>


    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/dark_red</item>
    </style>

    <style name="WithAppBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="background">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:editTextColor">@android:color/black</item>

    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="background">@color/colorAccent</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
        <item name="android:editTextColor">@android:color/black</item>


    </style>

    <style name="MyActionBar2" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorAccent</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>

    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="smallChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyFlatMaterialButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:elevation">@dimen/no_elevation</item>
    </style>

    <style name="CancelButton" parent="MyFlatMaterialButton">
        <item name="backgroundTint">@color/uiRed</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/uiRed</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/uiRed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CancelButton.Small" parent="@style/CancelButton">
        <item name="android:minHeight">@dimen/material_button_small_height</item>
    </style>

    <style name="LoginButton" parent="MyFlatMaterialButton">
        <item name="backgroundTint">@color/accentBlue</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/loginColour</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/accentBlue</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="LoginButton.Small." parent="LoginButton">
        <!--<item name="android:minHeight">@dimen/material_button_small_height</item>-->
    </style>

    <style name="LoginButton.Small" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@color/accentBlue</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/loginColour</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/accentBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/material_button_small_height</item>
    </style>

    <style name="StandardButton" parent="@style/Widget.AppCompat.Button.Small">
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/accentBlue</item>
        <item name="android:textColor">@color/accentBlue</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/material_button_small_height</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="DarkButtonSolid" parent="MyFlatMaterialButton">
        <item name="backgroundTint">@color/uiDark4</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/uiDark4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/uiDark4</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="DarkButtonSolid.Small" parent="@style/DarkButtonSolid">
        <item name="android:minHeight">@dimen/material_button_small_height</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
    </style>

    <style name="WarSCView.Small" parent="@style/DarkButtonSolid">
        <item name="android:minHeight">@dimen/material_button_small_height</item>
        <item name="android:textSize">12sp</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="backgroundTint">@color/uiGrey2</item>
        <item name="strokeColor">@color/uiGrey2</item>
        <item name="android:textColor">@color/uiGrey3</item>

    </style>

    <style name="MainActionButton" parent="MyFlatMaterialButton">

        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/material_button_corner_radius</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeWidth">@dimen/material_button_stroke_width</item>
        <item name="strokeColor">@color/accentBlue</item>
        <item name="android:textColor">@color/accentBlue</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="MainActionButton.Small" parent="MainActionButton">
        <item name="android:minHeight">@dimen/material_button_small_height</item>
    </style>

    <style name="VisitorActionButton">
        <item name="android:colorButtonNormal">@color/green</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:minHeight">@dimen/material_button_small_height</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/action_colour</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/alloyColor</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/androidGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/contra_purple</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
